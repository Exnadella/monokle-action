{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "skipLibCheck": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "**/*.test.ts"]
}
